[Unit]
Description=Setup Hub services
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
ExecStart=/usr/bin/hub run-script services start
ExecStop=/usr/bin/hub run-script services stop
ExecReload=/usr/bin/hub run-script services reload
RemainAfterExit=true

[Install]
WantedBy=multi-user.target
